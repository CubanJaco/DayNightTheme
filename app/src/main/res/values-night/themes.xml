<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <!--Toolbar-->
        <item name="colorSurface">@color/gray_dark</item>

        <!--Spinner-->
        <!--Popup menu-->
        <item name="colorOnSurface">@color/gray_light</item>

        <!-- Background de la app -->
        <item name="android:colorBackground">?attr/colorPrimaryDark</item>

        <!-- Tema por default de los botones-->
        <item name="materialButtonStyle">@style/Button.Colored</item>

        <!-- Tema por default para el menu de la app-->
        <item name="popupTheme">@style/AppTheme.PopupOverlay</item>

    </style>

    <!-- Tema para el menu de la app-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
